{
    "extends": "airbnb-base",
    "rules": {
      "no-underscore-dangle": "off",
      "no-restricted-syntax": "off",
      "no-unused-expressions": "off",
      "comma-dangle": ["error", {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "never"
      }]
    },
    "globals": {
      "context": true,
      "describe": true,
      "before": true,
      "beforeEach": true,
      "it": true,
      "expect": true,
      "sinon": true
    }
}
